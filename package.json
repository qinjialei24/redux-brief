{
  "name": "redux-brief",
  "version": "0.3.2",
  "description": "make redux easier to use",
  "main": "dist/redux-brief.esm.min.js",
  "types": "dist/api/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/qinjialei24/redux-brief",
  "license": "MIT",
  "keywords": [
    "redux",
    "immmer",
    "react",
    "reducer"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && rollup -c",
    "watch:build": "tsc -p tsconfig.json -w",
    "release": "npm run version && npm run build && npm publish",
    "version": "standard-version",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "check-cli": "run-s test diff-integration-tests check-integration-tests",
    "check-integration-tests": "run-s check-integration-test:*",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "reset-hard": "git clean -dfx && git reset --hard && yarn",
    "prepare-release": "run-s reset-hard test cov:check doc:html version doc:publish",
    "preinstall": "node ./check-yarn.js"
  },
  "engines": {
    "node": ">=10"
  },
  "peerDependencies": {
    "immer": "^9.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "react-redux": "^7.2.4",
    "redux": "^4.1.0",
    "redux-devtools-extension": "^2.13.9"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/runtime-corejs3": "^7.14.7",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "babel-loader": "^8.2.2",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-import": "^2.22.0",
    "immer": "^9.0.2",
    "jest": "^27.0.5",
    "prettier": "^2.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.52.7",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-uglify": "^6.0.4",
    "standard-version": "^9.3.0",
    "ts-jest": "^27.0.3",
    "ts-loader": "8.2.0",
    "ts-node": "^9.0.0",
    "tslib": "^2.3.0",
    "typedoc": "^0.19.0",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
